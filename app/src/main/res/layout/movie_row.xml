<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/movie_row_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
         />

        <TextView
            android:id="@+id/movie_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/movie_row_image"
            tools:text="Pirates of the Carribean"
            android:textStyle="bold"
            android:textColor="@color/grey_700"
        />

        <TextView
            android:id="@+id/movie_row_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/movie_row_title"
            app:layout_constraintStart_toEndOf="@id/movie_row_image"
            tools:text="10/08/22"
            android:paddingBottom="16dp"
            android:paddingRight="4dp"
            android:textColor="@color/grey_700"
            />

        <TextView
            android:id="@+id/movie_row_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            app:layout_constraintTop_toBottomOf="@id/movie_row_title"
            app:layout_constraintStart_toEndOf="@+id/movie_row_year"
            android:text="-"
            android:textColor="@color/grey_700"
        />

        <TextView
            android:id="@+id/movie_row_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/movie_row_separator"
            app:layout_constraintTop_toBottomOf="@id/movie_row_title"
            android:textColor="@color/grey_600"
            tools:text="4.75" />

        <TextView
            android:id="@+id/movie_row_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/movie_row_year"
            app:layout_constraintLeft_toRightOf="@id/movie_row_image"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="@string/loren_ipsum_long"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:minHeight="1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>